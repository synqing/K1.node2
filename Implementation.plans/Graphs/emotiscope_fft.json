{
  "name": "Emotiscope FFT",
  "description": "CENTER-ORIGIN beat-modulated spectrum. Position radiates from center, beat pulse gates frequency energy. Darker center expands outward as beat intensifies.",
  "artistic_intent": "Center-origin mandate compliant. Combines center distance with beat-scaled spectrum for rhythmic radial expansion. Audio reactivity verified.",
  "palette_data": [
    [0, 0, 0, 0],
    [32, 128, 0, 255],
    [64, 255, 0, 255],
    [96, 255, 128, 0],
    [128, 255, 255, 0],
    [160, 0, 255, 128],
    [192, 0, 128, 255],
    [255, 255, 255, 255]
  ],
  "nodes": [
    {
      "id": "position",
      "type": "position_gradient",
      "description": "CENTER-ORIGIN: distance from center"
    },
    {
      "id": "spectrum_full",
      "type": "spectrum_interpolate",
      "parameters": { "start_bin": 0, "end_bin": 63 },
      "description": "Full 64-bin frequency spectrum"
    },
    {
      "id": "beat_pulse",
      "type": "beat",
      "parameters": { "tempo_bin": -1 },
      "description": "Auto-detected beat magnitude (0-1)"
    },
    {
      "id": "beat_scaled",
      "type": "scale",
      "inputs": ["beat_pulse"],
      "parameters": { "factor": 0.7 },
      "description": "Scale beat to 0-0.7 range for modulation"
    },
    {
      "id": "spectrum_modulated",
      "type": "add",
      "inputs": ["spectrum_full", "beat_scaled"],
      "description": "Boost spectrum when beat is present"
    },
    {
      "id": "position_spectrum",
      "type": "add",
      "inputs": ["position", "spectrum_modulated"],
      "description": "Combine center-origin with beat-modulated spectrum"
    },
    {
      "id": "output",
      "type": "palette_interpolate",
      "inputs": ["position_spectrum"],
      "description": "Color based on center-origin + beat-modulated frequency"
    }
  ],
  "wires": [
    { "from": "spectrum_full", "to": "spectrum_modulated" },
    { "from": "beat_scaled", "to": "spectrum_modulated" },
    { "from": "position", "to": "position_spectrum" },
    { "from": "spectrum_modulated", "to": "position_spectrum" },
    { "from": "position_spectrum", "to": "output" }
  ]
}
