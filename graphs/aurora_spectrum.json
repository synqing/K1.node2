{
  "name": "Aurora Spectrum",
  "description": "Time-based aurora animation enhanced with bass frequency modulation. Combines sinusoidal motion with low-frequency audio reactivity.",
  "palette_data": [
    [0, 8, 3, 1],
    [21, 23, 8, 1],
    [42, 74, 38, 5],
    [63, 169, 99, 39],
    [85, 214, 169, 120],
    [106, 255, 255, 255],
    [127, 135, 255, 137],
    [149, 23, 255, 23],
    [170, 0, 255, 0],
    [191, 0, 136, 0],
    [212, 0, 56, 0],
    [234, 0, 56, 0]
  ],
  "nodes": [
    {
      "id": "position",
      "type": "position_gradient",
      "description": "LED position 0-1"
    },
    {
      "id": "time_node",
      "type": "time",
      "description": "Animation time in seconds"
    },
    {
      "id": "sin_time",
      "type": "sin",
      "inputs": ["time_node"],
      "description": "Smooth oscillation for aurora motion"
    },
    {
      "id": "bass",
      "type": "spectrum_range",
      "parameters": { "start_bin": 0, "end_bin": 8 },
      "description": "Bass energy (55-175 Hz)"
    },
    {
      "id": "bass_scaled",
      "type": "scale",
      "inputs": ["bass"],
      "parameters": { "factor": 0.5 },
      "description": "Scale bass for subtle modulation"
    },
    {
      "id": "animated_position",
      "type": "add",
      "inputs": ["position", "sin_time"],
      "description": "Add time oscillation to position"
    },
    {
      "id": "audio_modulated",
      "type": "add",
      "inputs": ["animated_position", "bass_scaled"],
      "description": "Add bass modulation to animated position"
    },
    {
      "id": "palette",
      "type": "palette_interpolate",
      "inputs": ["audio_modulated"],
      "description": "Map to Departure-Aurora palette"
    },
    {
      "id": "output",
      "type": "output",
      "description": "Write to LED array"
    }
  ],
  "wires": [
    { "from": "position", "to": "animated_position" },
    { "from": "time_node", "to": "sin_time" },
    { "from": "sin_time", "to": "animated_position" },
    { "from": "bass", "to": "bass_scaled" },
    { "from": "animated_position", "to": "audio_modulated" },
    { "from": "bass_scaled", "to": "audio_modulated" },
    { "from": "audio_modulated", "to": "palette" },
    { "from": "palette", "to": "output" }
  ]
}
